<%- include('./partials/head')%>

    <body class="body-home">
        <%- include('./partials/navbar')%>

            <div class="container-login">

              
                    <h1>Qué tal tu dia, <span class="username">
                            <%= name  %>
                        </span> ?</h1>

                    <form action="/home" method="POST" enctype="multipart/form-data">
                        <label for="post"></label>
                        <textarea id="post" name="post" class="post-textarea"
                            placeholder="Escribe tu publicación"></textarea>

                        <div class="button-container">
                            <input type="file" name="image" id="file-input" class="file-input">
                            <label for="file-input" class="file-label">Subir imagen</label>

                            <button type="submit" class="post-button">Publicar</button>
                        </div>

                        <div id="file-name"></div>

                    </form>
                  
            </div>

            <script src="/javascripts/home.js"></script>

            <%- include('./partials/footer')%>
    </body>

